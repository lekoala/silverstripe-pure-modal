{
    "name": "lekoala/silverstripe-pure-modal",
    "description": "Dead simple modals for SilverStripe (works in the admin too!)",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe",
        "modal",
        "css",
        "i18n",
        "module",
        "cms"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "LeKoala",
            "email": "thomas@lekoala.be"
        }
    ],
    "require": {
        "php": "^8.3",
        "silverstripe/recipe-plugin": "^2",
        "silverstripe/vendor-plugin": "^3",
        "silverstripe/framework": "^6"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.3",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "suggest": {
        "lekoala/silverstripe-cms-actions": "For PureModalAction support"
    },
    "extra": {
        "installer-name": "pure-modal",
        "expose": [
            "client"
        ]
    },
    "autoload": {
        "psr-4": {
            "LeKoala\\PureModal\\": "src/",
            "LeKoala\\PureModal\\Test\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/lekoala/silverstripe-pure-modal/issues"
    },
    "scripts": {
        "lint": "phpcs src/ tests/",
        "lint-clean": "phpcbf src/ tests/",
        "test": "phpunit -v"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
